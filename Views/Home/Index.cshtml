﻿@{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="margin: 0;" id="carouselExampleAutoplaying" class="carousel slide " data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/img/pexels-pixabay-263402.jpg" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <div class="container px-4 px-lg-5 text-center">
                    <div class="row gx-4 gx-lg-5 justify-content-center">
                        <div class="col-lg-10">
                            <h2 class="text-light">¿Quienes Somos?</h2>
                            <p class="lead mb-5">
                                Comprometidos con la innovación médica, que integra a profesionales de la salud, pioneros y expertos, dedicados a cuidar de la salud por más de 50 años.
