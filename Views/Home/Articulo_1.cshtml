
@{
    ViewData["Title"] = "Mindfulness";
    ViewData["Categorias"] = new List<string>{
            "Estres",
            "Ansiedad",
            "Salud mental"
         };
    ViewData["Publicacion"] = "Publicado el 1 de mayo del 2022";
    ViewData["AUTOR"] = "Pedro Sosa - Periodista especializado en salud, bienestar y ciencia.";
    Layout = "~/Views/Shared/_Layout2.cshtml";
